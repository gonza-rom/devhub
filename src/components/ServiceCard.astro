---
interface Props {
  icon: string;
  title: string;
  description: string;
  technologies: string[];
  price: string;
  priceNote: string;
}

const { icon, title, description, technologies, price, priceNote } = Astro.props;
---

<div class="group bg-dark-secondary p-8 rounded-xl shadow-lg border-2 border-transparent hover:border-primary transition-all duration-500 hover:-translate-y-3 hover:shadow-2xl hover:shadow-primary/30 relative overflow-hidden h-full flex flex-col">
  <div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-primary-dark/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

  <div class="relative z-10 flex flex-col flex-1">
    <div class="text-5xl mb-4 transition-all duration-500 group-hover:scale-110 group-hover:rotate-6 inline-block">
      <i class={`${icon} text-primary`}></i>
    </div>

    <h3 class="text-2xl font-bold text-primary mb-4 font-display">{title}</h3>
    <p class="text-gray-300 mb-4">{description}</p>

    <ul class="space-y-2 mb-6 text-sm text-gray-400 flex-1">
      {technologies.map((tech) => (
        <li class="flex items-center gap-2">
          <i class="fas fa-check text-primary text-xs"></i>
          <span>{tech}</span>
        </li>
      ))}
    </ul>

    <div class="border-t border-dark-tertiary pt-4 mt-auto">
      <div class="text-3xl font-bold text-primary mb-1 font-display">{price}</div>
      <p class="text-sm text-gray-500 italic">{priceNote}</p>
    </div>
  </div>

  <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-primary/20 to-transparent rounded-bl-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
</div>
---
interface Props {
  icon: string;
  title: string;
  description: string;
  technologies: string[];
  price: string;
  priceNote: string;
}

const { icon, title, description, technologies, price, priceNote } = Astro.props;
---

<div class="group bg-white dark:bg-dark-secondary p-8 rounded-xl shadow-lg dark:shadow-primary/10 border-2 border-transparent hover:border-primary transition-all duration-500 hover:-translate-y-3 hover:shadow-2xl hover:shadow-primary/30 dark:hover:shadow-primary/40 relative overflow-hidden">
  <!-- Animated gradient background on hover -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-primary-dark/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
  
  <div class="relative z-10">
    <div class="text-5xl mb-4 transition-all duration-500 group-hover:scale-110 group-hover:rotate-6 inline-block">
      <i class={`${icon} text-primary`}></i>
    </div>
    
    <h3 class="text-2xl font-bold text-primary mb-4 group-hover:text-primary-dark transition-colors duration-300 font-display">{title}</h3>
    
    <p class="text-gray-700 dark:text-gray-300 mb-4">{description}</p>
    
    <ul class="space-y-2 mb-6 text-sm text-gray-600 dark:text-gray-400">
      {technologies.map((tech, index) => (
        <li class="flex items-center gap-2 transition-all duration-300 hover:translate-x-2" style={`animation-delay: ${index * 0.1}s`}>
          <i class="fas fa-check text-primary group-hover:scale-125 transition-transform duration-300"></i>
          <span>{tech}</span>
        </li>
      ))}
    </ul>
    
    <div class="border-t border-gray-200 dark:border-dark-tertiary pt-4 mt-4">
      <div class="text-3xl font-bold text-primary mb-2 group-hover:scale-110 transition-transform duration-300 inline-block font-display">{price}</div>
      <p class="text-sm text-gray-500 dark:text-gray-400 italic">{priceNote}</p>
    </div>
  </div>

  <!-- Corner decoration -->
  <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-primary/20 to-transparent rounded-bl-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
</div>
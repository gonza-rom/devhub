---
interface Props {
  icon: string;
  title: string;
  description: string;
  technologies: string[];
  price: string;
  priceNote: string;
}

const { icon, title, description, technologies, price, priceNote } = Astro.props;
---

<div class="bg-white dark:bg-dark-secondary p-8 rounded-xl shadow-lg dark:shadow-primary/10 border-2 border-transparent hover:border-primary transition-all duration-300 hover:-translate-y-2">
  <div class="text-5xl mb-4">{icon}</div>
  
  <h3 class="text-2xl font-bold text-primary mb-4">{title}</h3>
  
  <p class="text-gray-700 dark:text-gray-300 mb-4">{description}</p>
  
  <ul class="space-y-2 mb-6 text-sm text-gray-600 dark:text-gray-400">
    {technologies.map(tech => (
      <li class="flex items-center gap-2">
        <span class="text-primary">âœ“</span>
        <span>{tech}</span>
      </li>
    ))}
  </ul>
  
  <div class="border-t border-gray-200 dark:border-dark-tertiary pt-4 mt-4">
    <div class="text-3xl font-bold text-primary mb-2">{price}</div>
    <p class="text-sm text-gray-500 dark:text-gray-400 italic">{priceNote}</p>
  </div>
</div>
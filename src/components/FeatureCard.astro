---
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="text-center p-6 group">
  <div class="text-5xl mb-4 transition-transform duration-300 group-hover:scale-110">
    <i class={`${icon} text-primary`}></i>
  </div>
  <h3 class="text-xl font-bold text-primary mb-3 font-display">{title}</h3>
  <p class="text-gray-700 dark:text-gray-300">{description}</p>
</div>
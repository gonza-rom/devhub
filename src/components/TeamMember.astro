---
interface Props {
  avatar: string;
  name: string;
  role: string;
  description: string;
  linkedinUrl: string;
  instagramUrl: string;
}

const { avatar, name, role, description, linkedinUrl, instagramUrl } = Astro.props;
---

<div class="group bg-dark-secondary p-8 rounded-xl shadow-lg shadow-primary/10 border-2 border-transparent hover:border-primary transition-all duration-500 hover:-translate-y-3 text-center relative overflow-hidden hover:shadow-2xl hover:shadow-primary/30">
  <!-- Animated gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-transparent to-primary-dark/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
  
  <div class="relative z-10">
    <div class="w-32 h-32 mx-auto mb-6 bg-gradient-to-br from-primary to-primary-dark rounded-full flex items-center justify-center text-6xl transition-all duration-500 group-hover:scale-110 group-hover:rotate-6 group-hover:shadow-[0_0_30px_rgba(255,193,7,0.6)]">
      {avatar}
    </div>
    
    <h3 class="text-2xl font-bold text-primary mb-2 group-hover:scale-105 transition-transform duration-300 font-display">{name}</h3>
    
    <p class="text-gray-400 font-semibold mb-4">{role}</p>
    
    <p class="text-gray-300 mb-6 text-sm">{description}</p>
    
    <!-- Social Links -->
    <div class="flex items-center justify-center gap-4">
      <a 
        href={linkedinUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="w-10 h-10 flex items-center justify-center rounded-full bg-dark border-2 border-primary/30 text-primary hover:bg-primary hover:text-dark transition-all duration-300 hover:scale-110"
        aria-label="LinkedIn"
      >
        <i class="fab fa-linkedin-in text-lg"></i>
      </a>
      
      <a 
        href={instagramUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="w-10 h-10 flex items-center justify-center rounded-full bg-dark border-2 border-primary/30 text-primary hover:bg-primary hover:text-dark transition-all duration-300 hover:scale-110"
        aria-label="Instagram"
      >
        <i class="fab fa-instagram text-lg"></i>
      </a>
    </div>
  </div>

  <!-- Decorative corner glow -->
  <div class="absolute -bottom-10 -right-10 w-40 h-40 bg-primary/20 rounded-full blur-2xl opacity-0 group-hover:opacity-50 transition-opacity duration-500"></div>
</div>